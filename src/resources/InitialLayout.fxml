<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.Label?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.srjc.porter.brooke.wpm.Data.Start"
            stylesheets="@edu/srjc/porter/brooke/wpm/UI/UiStyles.css">

    <Pane prefHeight="720.0"
          prefWidth="1280.0"
          styleClass="pane-background">

        <ImageView fitHeight="720.0"
                   fitWidth="1280.0"
                   preserveRatio="true">
            <Image url="@edu/srjc/porter/brooke/wpm/UI/Images/backWave.png"/>
        </ImageView>
        <ImageView layoutX="100.0"
                   layoutY="300.0"
                   preserveRatio="true">
            <Image url="@edu/srjc/porter/brooke/wpm/UI/Images/boatNPC.png"/>
        </ImageView>
        <ImageView fitHeight="720.0"
                   fitWidth="1280.0"
                   preserveRatio="true">
            <Image url="@edu/srjc/porter/brooke/wpm/UI/Images/midWave.png"/>
        </ImageView>
        <ImageView layoutX="150.0"
                   layoutY="380.0"
                   preserveRatio="true">
            <Image url="@edu/srjc/porter/brooke/wpm/UI/Images/boatPlayer.png"/>
        </ImageView>
        <ImageView fitHeight="720.0"
                   fitWidth="1280.0"
                   preserveRatio="true">
            <Image url="@edu/srjc/porter/brooke/wpm/UI/Images/frontWave.png"/>
        </ImageView>

        <Pane prefHeight="720.0"
              prefWidth="1280.0"
              styleClass="pane-overlay"/>
        <Label prefWidth="1280.0"
               prefHeight="720.0"
               styleClass="label-text"
               fx:id="stateLabel"/>

    </Pane>

</AnchorPane>
